{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es2015",
        "lib": [
            "es2015"
        ],
        "rootDir": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,

        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,

        "types": ["node"]
    }
}
